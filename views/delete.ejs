<%- include("_header") -%>
<p></p>
<h5>Are you sure you want to delete this customer?</h5>

<form action="/delete/<%= model.cusid %>" method="post">
  <div class="form-horizontal">

    <%- include("_display") -%>

    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-6">
        <input type="submit" style="display: block; margin: 0 auto" value="Delete Customer" class="btn btn-default btn-danger" />
        <p></p>
        <a class="btn btn-primary" href="/customer">Back</a>
      </div>
    </div>
  </div>
</form>

<% if (type === "post") { %>
    <h5>Customer Deleted Successfully!</h5>
  <% } %>

<%- include("_footer") -%>